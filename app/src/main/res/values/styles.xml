<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ProgressDot">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:src">@drawable/dot</item>
    </style>

    <style name="RatingBubble">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="color1">@color/rating_red</item>
        <item name="color2">@color/rating_yellow</item>
        <item name="color3">@color/rating_green</item>
    </style>

</resources>
